---
import SvgGreenAsterisk from "./SvgGreenAsterisk.astro";
import SvgSwirl from "./SvgSwirl.astro";
import SvgSwosh from "./SvgSwosh.astro";

interface Props {
  title?: string;
}

const { title = "Lorem Ipsum" } = Astro.props;
---

<header class="inner-header">
  <div class="inner-header-content">
    <SvgGreenAsterisk x="5%" y="70%" rotateDeg={15} zIndex={0} />
    <SvgSwirl x="80%" y="80%" rotateDeg={-30} zIndex={0} />
    <SvgSwosh x="50%" y="5%" rotateDeg={10} zIndex={0} />
    <h1>{title}</h1>
  </div>
</header>

<style>
  .inner-header {
    width: 100vw;
    height: 350px;
    position: relative;
    background-color: var(--blue);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 80px;
  }

  .inner-header-content {
    z-index: 10;
    text-align: center;
    padding: 0 2rem;
  }

  .inner-header h1 {
    color: var(--brown);
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: bold;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    margin: 0;
  }

</style>
