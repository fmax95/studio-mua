---
export type Props = {
  title?: string;
  subtitle?: string;
  body?: string;
  cta?: string;
  href?: string;
  class?: string;
};

const {
  title = "The Icebreaker",
  subtitle = "Lorem ipsum",
  body = "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
  cta = "Get started",
  href,
  class: className,
} = Astro.props;
---

<article class={`card ${className ?? ""}`}>
  <header class="card__header">
    <p class="card__subtitle">{subtitle}</p>
    <h3 class="card__title">{title}</h3>
  </header>

  <p class="card__body">{body}</p>

  {
    href ? (
      <a href={href} class="card__cta">
        {cta}
      </a>
    ) : (
      <button class="card__cta" type="button">
        {cta}
      </button>
    )
  }
</article>

<style>
  .card {
    width: 100%;
    height: 350px;
    box-sizing: border-box;
    background: var(--blue-light);
    color: var(--black);
    border: 3px solid var(--brown);
    border-radius: 18px;
    padding: 18px;
    padding-top: 50px;
    padding-bottom: 40px;
    box-shadow: 0 10px 0 rgba(75, 56, 33, 0.22);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 16px;
    text-align: center;
    position: relative;
  }

  @media (max-width: 720px) {
    .card {
      height: auto;
      min-height: 320px;
      padding-bottom: 50px;
    }
  }

  .card__header {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .card__subtitle {
    margin: 0;
    font-size: 14px;
    font-weight: 700;
    letter-spacing: 0.3px;
    color: var(--brown);
    opacity: 0.9;
  }

  .card__title {
    margin: 0;
    font-size: 22px;
    line-height: 1.05;
    font-weight: 800;
    color: var(--black);
  }

  .card__body {
    margin: 0;
    font-size: 14px;
    line-height: 1.35;
    color: var(--black);
    opacity: 0.9;
    flex: 1;
    display: flex;
    align-items: center;
  }

  .card__cta {
    margin-top: auto;
    background: var(--white);
    color: var(--brown);
    border-radius: 999px;
    padding: 10px 24px;
    font-weight: 800;
    letter-spacing: 0.6px;
    text-transform: uppercase;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    position: absolute;
    bottom: 0;
    transform: translateY(50%);
    cursor: pointer;
  }

  .card__cta:hover {
    background: var(--blue);
    color: var(--brown);
  }

  .card__cta:active {
    transform: translateY(1px);
  }
</style>
