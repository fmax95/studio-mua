---
export type Props = {
  title?: string;
  subtitle?: string;
  body?: string;
  cta?: string;
  href?: string;
  class?: string;
};

const {
  title = "The Icebreaker",
  subtitle = "Lorem ipsum",
  body = "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
  cta = "Get started",
  href,
  class: className,
} = Astro.props;
---

<article class={`card ${className ?? ""}`}>
  <header class="card__header">
    <p class="card__subtitle">{subtitle}</p>
    <h3 class="card__title">{title}</h3>
  </header>

  <p class="card__body">{body}</p>

  {href ? (
    <a href={href} class="card__cta">
      {cta}
    </a>
  ) : (
    <button class="card__cta" type="button">
      {cta}
    </button>
  )}
</article>

<style>
  .card {
    width: 100%;
    box-sizing: border-box;
    background: var(--white);
    color: var(--black);
    border: 3px solid var(--brown);
    border-radius: 18px;
    padding: 18px 18px 16px;
    box-shadow: 0 10px 0 rgba(75, 56, 33, 0.22);
    display: flex;
    flex-direction: column;
    gap: 8px;
    text-align: center;
  }

  .card__subtitle {
    margin: 0;
    font-size: 14px;
    font-weight: 700;
    letter-spacing: 0.3px;
    color: var(--brown);
    opacity: 0.9;
  }

  .card__title {
    margin: 6px 0 0;
    font-size: 22px;
    line-height: 1.05;
    font-weight: 800;
    color: var(--black);
  }

  .card__body {
    margin: 0;
    font-size: 14px;
    line-height: 1.35;
    color: var(--black);
    opacity: 0.9;
  }

  .card__cta {
    margin-top: 2px;
    align-self: center;
    background: var(--brown);
    color: var(--white);
    border: 2px solid var(--brown);
    border-radius: 999px;
    padding: 10px 14px;
    font-weight: 800;
    letter-spacing: 0.6px;
    text-transform: uppercase;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
  }

  .card__cta:hover {
    filter: brightness(1.05);
  }

  .card__cta:active {
    transform: translateY(1px);
  }
</style>
