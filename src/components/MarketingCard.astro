---
import SvgShield from "./svg/SvgShield.astro";

export type Props = {
  title?: string;
  subtitle?: string;
  body?: string;
  cta?: string;
  href?: string;
  class?: string;
  color?: "pink" | "green" | "brown";
};

const {
  title = "The Icebreaker",
  subtitle = "Lorem ipsum",
  body = "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
  cta = "Get started",
  href,
  class: className,
  color,
} = Astro.props;

const ctaColorClass = color ? `card__cta--${color}` : "";
// Inline styles to guarantee correct colors regardless of cascade
let ctaStyle = "";
if (color === "pink") {
  ctaStyle = "background: var(--pink); color: var(--brown);";
} else if (color === "green") {
  ctaStyle = "background: var(--green); color: var(--brown);";
} else if (color === "brown") {
  ctaStyle = "background: var(--brown); color: var(--white);";
}

// Configurazione posizione e rotazione dello shield in base al colore
let shieldX = "50%";
let shieldY = "0%";
let shieldRotation = 0;

if (color === "pink") {
  shieldRotation = -10; // verso sinistra
} else if (color === "green") {
  shieldX = "65%";
  shieldY = "0";
  shieldRotation = 10; // verso destra
} else if (color === "brown") {
  shieldX = "65%";
  shieldY = "0";
  shieldRotation = -15; // verso sinistra
}
---

<article class={`card ${className ?? ""}`}>
  <SvgShield
    type={color}
    x={shieldX}
    y={shieldY}
    width="60px"
    rotateDeg={shieldRotation}
  />

  <header class="card__header">
    <p class="card__subtitle">{subtitle}</p>
    <h3 class="card__title">{title}</h3>
  </header>

  <p class="card__body">{body}</p>

  {
    href ? (
      <a href={href} class={`card__cta ${ctaColorClass}`} style={ctaStyle}>
        {cta}
      </a>
    ) : (
      <button
        class={`card__cta ${ctaColorClass}`}
        type="button"
        style={ctaStyle}
      >
        {cta}
      </button>
    )
  }
</article>

<style>
  .card {
    width: 100%;
    height: 295px;
    box-sizing: border-box;
    background: var(--blue-light);
    color: var(--black);
    border: 3px solid var(--brown);
    border-radius: 18px;
    padding: 18px;
    padding-top: 50px;
    padding-bottom: 40px;
    box-shadow: 0 10px 0 rgba(75, 56, 33, 0.22);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 16px;
    text-align: center;
    position: relative;
  }

  @media (max-width: 720px) {
    .card {
      height: auto;
      min-height: 320px;
      padding-bottom: 50px;
    }
  }

  .card__header {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .card__subtitle {
    margin: 0;
    font-size: 14px;
    font-weight: 700;
    letter-spacing: 0.3px;
    color: var(--brown);
    opacity: 0.9;
  }

  .card__title {
    margin: 0;
    font-size: 22px;
    line-height: 1.05;
    font-weight: 800;
    color: var(--black);
  }

  .card__body {
    margin: 0;
    font-size: 14px;
    line-height: 1.35;
    color: var(--black);
    opacity: 0.9;
    flex: 1;
    display: flex;
    align-items: center;
  }

  .card__cta {
    margin-top: auto;
    background: var(--white);
    color: var(--brown);
    border-radius: 999px;
    padding: 10px 24px;
    font-weight: 800;
    letter-spacing: 0.6px;
    text-transform: uppercase;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    position: absolute;
    bottom: 0;
    transform: translateY(50%);
    cursor: pointer;
  }

  /* Default hover only when no color variant applied */
  .card__cta:not(.card__cta--pink):not(.card__cta--green):not(
      .card__cta--brown
    ):hover {
    background: var(--blue);
    color: var(--brown);
  }
  /* CTA Color Variants */
  .card__cta--pink {
    background: var(--pink);
    color: var(--brown);
  }
  .card__cta--green {
    background: var(--green);
    color: var(--brown);
  }
  .card__cta--brown {
    background: var(--brown);
    color: var(--white);
  }

  /* Preserve variant colors on hover */
  .card__cta--pink:hover {
    background: var(--pink);
    color: var(--brown);
  }
  .card__cta--green:hover {
    background: var(--green);
    color: var(--brown);
  }
  .card__cta--brown:hover {
    background: var(--brown);
    color: var(--white);
  }

  .card__cta:active {
    transform: translateY(1px);
  }

  /* Responsive spacing steps */
  @media (max-width: 1200px) {
    .card {
      padding: 16px;
      padding-top: 44px;
      padding-bottom: 36px;
      gap: 14px;
    }
    .card__header {
      gap: 5px;
    }
    .card__body {
      line-height: 1.32;
    }
    .card__cta {
      transform: translateY(46%);
    }
  }

  @media (max-width: 1050px) {
    .card {
      padding: 14px;
      padding-top: 40px;
      padding-bottom: 32px;
      gap: 12px;
    }
    .card__header {
      gap: 4px;
    }
    .card__title {
      font-size: 21px;
    }
    .card__body {
      font-size: 13.5px;
      line-height: 1.3;
    }
    .card__cta {
      transform: translateY(44%);
    }
  }

  @media (max-width: 900px) {
    .card {
      padding: 12px;
      padding-top: 36px;
      padding-bottom: 28px;
      gap: 10px;
      height: 280px;
    }
    .card__title {
      font-size: 20px;
    }
    .card__body {
      font-size: 13px;
      line-height: 1.28;
    }
    .card__cta {
      transform: translateY(42%);
    }
  }

  @media (max-width: 750px) {
    .card {
      padding: 10px;
      padding-top: 32px;
      padding-bottom: 24px;
      gap: 8px;
      height: 250px;
    }
    .card__title {
      font-size: 19px;
    }
    .card__body {
      font-size: 12.8px;
      line-height: 1.26;
    }
    .card__cta {
      transform: translateY(40%);
    }
  }
</style>
