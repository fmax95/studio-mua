---
import SvgItGirlEn from "../svg/SvgItGirlEn.astro";
import SvgPinkArrowFlat from "../svg/SvgPinkArrowFlat.astro";

// Locale & translations
const currentLocale = Astro.currentLocale || "it";
const translations = await import(`../../i18n/${currentLocale}.json`);
const t = translations.default;
---

<section class="manifesto-section">
  <div class="content-container">
    <SvgPinkArrowFlat
      x="65%"
      y="-35%"
      width="100px"
      rotateDeg={15}
      zIndex={1}
    />
    <SvgItGirlEn x="70%" y="-55%" width="120px" rotateDeg={0} zIndex={1} />
    {t.manifestoSection.title && <h2 class="manifesto-title">{t.manifestoSection.title}</h2>}
    {t.manifestoSection.subtitle && <p class="manifesto-subtitle">{t.manifestoSection.subtitle}</p>}
    <p class="paragraph bold">{t.manifestoSection.paragraph1}</p>
    <p class="paragraph">{t.manifestoSection.paragraph2}</p>
    <p class="paragraph">{t.manifestoSection.paragraph3}</p>
    <p class="paragraph bold">{t.manifestoSection.paragraph4}</p>
  </div>
</section>

<style>
  .manifesto-section {
    width: 100%;
    padding: 100px 0 100px 0;
  }

  .content-container {
    max-width: 1000px;
    margin: 0 auto;
    text-align: center;
    padding: 0 20px;
    position: relative;
  }

  .manifesto-title {
    color: var(--brown);
    font-size: clamp(28px, 5vw, 48px);
    font-weight: 800;
    margin-bottom: 20px;
    line-height: 1.2;
    text-align: center;
  }

  .manifesto-subtitle {
    color: var(--brown);
    font-size: clamp(18px, 3vw, 24px);
    font-weight: 600;
    margin-bottom: 40px;
    line-height: 1.3;
    text-align: center;
    font-style: italic;
  }

  .paragraph {
    color: var(--brown);
    line-height: 1.2 !important;
    margin-bottom: 30px;
    font-size: 1rem;
    text-align: center;
  }

  .paragraph.bold {
    font-weight: bold;
  }
</style>
