---
interface Props {
  titolo: string;
  typeSvg: string;
  text: string;
}

const { titolo, typeSvg, text } = Astro.props;
---

<div class="small-card">
  <h3 class="card-title">{titolo}</h3>
  <div class="svg-container">
    {
      typeSvg === "star" && (
        <svg viewBox="0 0 100 100" class="svg-icon">
          <polygon
            points="50,10 61,39 92,39 67,58 77,88 50,69 23,88 33,58 8,39 39,39"
            fill="var(--pink)"
          />
        </svg>
      )
    }
    {
      typeSvg === "swosh" && (
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="695 23 50 35"
          class="svg-icon"
          role="img"
          aria-label="green swoosh"
        >
          <path
            opacity="0.9"
            fill="var(--green)"
            d="M698.81,33.28c-2.68,7.43,1.78,15.91,9.43,17.85,3.66.93,7.63.38,10.83-1.65s5.38-5.04,7.12-8.25c.84-1.55,1.59-3.16,2.31-4.77.88-1.96,1.75-4.05,1.6-6.25-.28-4.11-3.81-7.5-8.04-6.15s-5.77,5.91-5.08,10.04c.67,4.01,2.78,8.19,5.53,11.18,3.1,3.36,7.81,5.37,12.38,4.42,4.32-.9,7.61-4.67,7.88-9.06.09-1.41-1.27-2.62-2.62-2.62-1.49,0-2.53,1.2-2.62,2.62-.12,1.93-1.87,3.49-3.7,3.93-2.31.56-4.87-.46-6.6-1.98-2.06-1.81-3.45-4.28-4.38-6.83-.71-1.95-1.76-5.2.33-6.51.53-.33.06-.07.4-.19.09-.03.66-.07.38-.08.03,0,.28.03.47.23.66.69.44,1.92.22,2.73-.7,2.52-2.08,5.03-3.37,7.3-2.27,3.98-5.75,7.76-10.77,7.04-5.55-.8-8.52-6.48-6.67-11.61.48-1.33-.54-2.87-1.83-3.22-1.45-.4-2.74.49-3.22,1.83h0Z"
          />
        </svg>
      )
    }
    {
      typeSvg === "swirl" && (
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 32.767 35.733"
          preserveAspectRatio="xMidYMid meet"
          class="svg-icon"
          role="img"
          aria-label="blue swirl"
        >
          <path
            fill="var(--blue)"
            transform="translate(-618.033 -19.800)"
            d="M650.35,27.36c-7.17-9.36-20.93-10.46-28.5-.8s-3.23,23.68,7.74,27.98c10.09,3.95,23.31-4.12,20.71-15.81-2.09-9.41-16.61-15.38-21.72-4.9-2.06,4.22-.29,10.26,4.4,11.85,4.66,1.57,9.83-2.87,6.68-7.46-1.67-2.43-5.66-.13-3.98,2.33-2.48.31-3.6-.73-3.38-3.12l1.36-2.81c1.44-1.52,4.08-1.98,6.03-1.51,3.8.9,6.57,5.1,6.29,8.92-.66,8.83-11.34,11.04-17.57,6.66s-7.68-14.36-2.2-20.17,15.15-5.39,20.17,1.17c1.78,2.32,5.78.03,3.98-2.33h0Z"
          />
        </svg>
      )
    }
    {
      typeSvg === "asterisk" && (
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 100 100"
          class="svg-icon"
          role="img"
          aria-label="brown asterisk"
        >
          <g stroke="var(--brown)" stroke-width="14" stroke-linecap="round">
            <line x1="50" y1="14" x2="50" y2="86" />
            <line x1="14" y1="50" x2="86" y2="50" />
            <line x1="24" y1="24" x2="76" y2="76" />
            <line x1="76" y1="24" x2="24" y2="76" />
          </g>
        </svg>
      )
    }
  </div>
  <p class="card-text">{text}</p>
</div>

<style>
  .small-card {
    background-color: var(--blue-light);
    color: var(--brown);
    border-radius: 2rem;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    text-align: center;
    aspect-ratio: 1 / 1;
    width: 100%;
    max-width: 320px;
    height: 400px !important;
  }

  .card-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin: 0;
    line-height: 1.2;
  }

  .svg-container {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
  }

  .svg-icon {
    width: 133px;
    height: 133px;
  }

  .card-text {
    font-size: 0.95rem;
    line-height: 1.4;
    margin: 0;
  }
</style>
