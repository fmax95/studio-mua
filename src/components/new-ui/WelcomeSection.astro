---
import SvgGreenArrow from "../svg/SvgGreenArrow.astro";
import SvgPinkArrow from "../svg/SvgPinkArrow.astro";
import SvgTextHomeEng from "../svg/SvgTextHomeEng.astro";
import SvgTextHomeIta from "../svg/SvgTextHomeIta.astro";

// Locale & translations
const currentLocale = Astro.currentLocale || "it";
const translations = await import(`../../i18n/${currentLocale}.json`);
const t = translations.default;
---

<section class="welcome-section">
  <div class="content-container">
    <SvgPinkArrow x="-25%" y="2%" width="150px" rotateDeg={0} zIndex={1} />
    <h2 class="main-title">{t.welcomeSection.title}</h2>
    <p class="paragraph">{t.welcomeSection.paragraph1}</p>
    <p class="paragraph">{t.welcomeSection.paragraph2}</p>
    <p class="paragraph">{t.welcomeSection.paragraph3}</p>
    <h3 class="closing-title">{t.welcomeSection.closingTitle}</h3>
    <SvgGreenArrow x="70%" y="93%" width="120px" rotateDeg={0} zIndex={1} />
    <div class="svg-text-home">
      {
        currentLocale === "it" && (
          <SvgTextHomeIta
            x="92%"
            y="88%"
            width="150px"
            rotateDeg={0}
            zIndex={1}
          />
        )
      }
      {
        currentLocale === "en" && (
          <SvgTextHomeEng
            x="92%"
            y="88%"
            width="150px"
            rotateDeg={0}
            zIndex={1}
          />
        )
      }
    </div>
  </div>
  <div class="waves-container">
    <!-- Back wave (blue-light) -->
    <svg
      class="wave wave-back"
      viewBox="0 0 1440 50"
      preserveAspectRatio="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M0,50 L0,25 Q30,0 60,25 Q90,50 120,25 Q150,0 180,25 Q210,50 240,25 Q270,0 300,25 Q330,50 360,25 Q390,0 420,25 Q450,50 480,25 Q510,0 540,25 Q570,50 600,25 Q630,0 660,25 Q690,50 720,25 Q750,0 780,25 Q810,50 840,25 Q870,0 900,25 Q930,50 960,25 Q990,0 1020,25 Q1050,50 1080,25 Q1110,0 1140,25 Q1170,50 1200,25 Q1230,0 1260,25 Q1290,50 1320,25 Q1350,0 1380,25 Q1410,50 1440,25 L1440,50 Z"
        fill="var(--blue-light)"></path>
    </svg>
    <!-- Front wave (blue) -->
    <svg
      class="wave wave-front"
      viewBox="0 0 1440 50"
      preserveAspectRatio="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M0,50 L0,25 Q30,0 60,25 Q90,50 120,25 Q150,0 180,25 Q210,50 240,25 Q270,0 300,25 Q330,50 360,25 Q390,0 420,25 Q450,50 480,25 Q510,0 540,25 Q570,50 600,25 Q630,0 660,25 Q690,50 720,25 Q750,0 780,25 Q810,50 840,25 Q870,0 900,25 Q930,50 960,25 Q990,0 1020,25 Q1050,50 1080,25 Q1110,0 1140,25 Q1170,50 1200,25 Q1230,0 1260,25 Q1290,50 1320,25 Q1350,0 1380,25 Q1410,50 1440,25 L1440,50 Z"
        fill="var(--blue)"></path>
    </svg>
  </div>
</section>

<style>
  .welcome-section {
    background-color: var(--blue-light);
    padding: 80px 0 0;
    width: 100vw;
    position: relative;
    margin-left: calc(-50vw + 50%);
  }

  .content-container {
    max-width: 500px;
    margin: 0 auto;
    text-align: center;
    padding: 0 20px 80px;
    position: relative;
  }

  .waves-container {
    position: relative;
    height: 50px;
    width: 100vw;
    overflow: hidden;
    left: 0;
  }

  .wave {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100vw;
    height: 50px;
    display: block;
  }

  .wave-back {
    transform: translateY(-8px);
  }

  .wave-front {
    transform: translateY(0);
  }

  .main-title {
    font-family: var(--font-title);
    color: var(--brown);
    margin-bottom: 40px;
    font-size: 2.5rem;
    line-height: 1.2;
  }

  .paragraph {
    color: var(--brown);
    line-height: 1.8;
    margin-bottom: 30px;
    font-size: 1rem;
  }

  .closing-title {
    color: var(--brown);
    margin-top: 60px;
    font-size: 1.8rem;
    line-height: 1.3;
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .main-title {
      font-size: 2rem;
    }

    .closing-title {
      font-size: 1.5rem;
      margin-top: 40px;
    }
  }

  @media (max-width: 700px) {
    .svg-text-home {
      display: none !important;
    }
  }

  @media (max-width: 720px) {
    .welcome-section {
      padding: 60px 20px;
      margin-left: 0;
      width: 100%;
    }

    .content-container {
      padding-bottom: 60px;
    }

    .waves-container {
      display: none;
    }

    .main-title {
      font-size: 2rem;
      margin-bottom: 30px;
    }

    .paragraph {
      text-align: center;
      margin-bottom: 20px;
      font-size: 0.95rem;
    }

    .closing-title {
      font-size: 1.5rem;
      margin-top: 40px;
    }
  }
</style>
