const toCss = (v: number | string) => (typeof v === "number" ? `${v}px` : v);

const inlineStyle = [
  "position:absolute",
  `left:${toCss(x)}`,
  `top:${toCss(y)}`,
  `z-index:${zIndex}`,
  rotateDeg ? `transform:rotate(${rotateDeg}deg)` : "",
  width != null ? `width:${toCss(width)}` : "",
  height != null ? `height:${toCss(height)}` : "",
  style ?? "",
]
  .filter(Boolean)
  .join("; ");
