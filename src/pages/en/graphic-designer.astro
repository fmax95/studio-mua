---
import FormQuote from "../../components/FormQuote.astro";
import InnerHeader from "../../components/InnerHeader.astro";
import Footer from "../../components/new-ui/Footer.astro";
import SvgGreenAsterisk from "../../components/SvgGreenAsterisk.astro";
import SvgSwosh from "../../components/SvgSwosh.astro";
import SvgBrandText from "../../components/SvgBrandText.astro";
import SvgDoodle from "../../components/SvgDoodle.astro";
import WhatYouNeedSection from "../../components/WhatYouNeedSection.astro";
import Layout from "../../layouts/Layout.astro";
import translations from "../../i18n/en.json";
---

<Layout 
  title="Graphic Designer La Spezia | Brand Identity & Logo Design | Studio Mua"
  description="Professional graphic designer in La Spezia. Brand identity creation, logo design, and cohesive visual identity. Strategic design to stand out from the competition."
  keywords="graphic designer la spezia, professional designer, brand identity, logo design, visual identity, graphic design, logo creation, brand restyling"
  lang="en"
>
  <main>
    <InnerHeader title={translations.graphicDesigner.pageTitle}>
      <SvgBrandText slot="decorations" x="15%" y="75%" width="150px" rotateDeg={15} zIndex={-1} />
      <SvgDoodle slot="decorations" x="80%" y="10%" rotateDeg={-20} zIndex={-1} />
    </InnerHeader>
    <section class="text-section">
      <div class="text-container">
        <SvgSwosh x="55%" y="2%" rotateDeg={-5} zIndex={0} />
        <SvgSwosh x="5%" y="13%" rotateDeg={-25} zIndex={0} />
        <SvgGreenAsterisk x="80%" y="60%" rotateDeg={-10} zIndex={0} />
        <SvgSwosh x="10%" y="17%" rotateDeg={+25} zIndex={0} />
        <SvgSwosh x="70%" y="71%" rotateDeg={-25} zIndex={0} />
        <SvgSwosh x="39%" y="50%" rotateDeg={-12} zIndex={0} />
        <SvgGreenAsterisk x="1%" y="60%" rotateDeg={-10} zIndex={0} />

        <h2 class="text-block-title">
          {translations.graphicDesigner.sectionTitle}
        </h2>
        <p class="text-block">
          {translations.graphicDesigner.paragraph1}
        </p>
        <p class="text-block">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Lorem ipsum
          dolor sit amet, consectetur adipiscing elit. Lorem ipsum dolor sit
          amet, consectetur adipiscing elit.
        </p>
        <p class="text-block">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Lorem ipsum
          dolor sit amet, consectetur adipiscing elit. Lorem ipsum dolor sit
          amet, consectetur adipiscing elit. Lorem ipsum dolor sit amet,
          consectetur adipiscing elit.
        </p>
        <p class="text-block text-block-bottom">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Lorem ipsum
          dolor sit amet, consectetur adipiscing elit. Lorem ipsum dolor sit
          amet, consectetur adipiscing elit.
        </p>
      </div>
    </section>
    <div class="waves-container">
      <svg
        class="wave"
        viewBox="0 0 1440 50"
        preserveAspectRatio="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M0,50 L0,25 Q30,0 60,25 Q90,50 120,25 Q150,0 180,25 Q210,50 240,25 Q270,0 300,25 Q330,50 360,25 Q390,0 420,25 Q450,50 480,25 Q510,0 540,25 Q570,50 600,25 Q630,0 660,25 Q690,50 720,25 Q750,0 780,25 Q810,50 840,25 Q870,0 900,25 Q930,50 960,25 Q990,0 1020,25 Q1050,50 1080,25 Q1110,0 1140,25 Q1170,50 1200,25 Q1230,0 1260,25 Q1290,50 1320,25 Q1350,0 1380,25 Q1410,50 1440,25 L1440,50 Z"
          fill="var(--blue)"></path>
      </svg>
    </div>

    <WhatYouNeedSection lang="en" page="graphicDesigner" />

    <FormQuote lang="en" />
    <Footer></Footer>
  </main>
</Layout>

<style>
  .text-section {
    width: 100%;
    position: relative;
    padding: 80px 0;
    background-color: var(--blue-light) !important;
    border-top: 60px solid var(--white) !important;
  }
  .text-container {
    max-width: 800px;
    padding: 0 20px;
    position: relative;
    margin: auto;
  }

  .text-block-title {
    color: var(--brown);
    margin-bottom: 40px;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .text-block {
    color: var(--brown);
    line-height: 1.2;
    margin-bottom: 15px;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .waves-container {
    width: 100%;
    height: 50px;
    background-color: var(--blue-light);
  }

  .wave {
    width: 100%;
    height: 50px;
    display: block;
  }
</style>
