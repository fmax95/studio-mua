---
import FormQuote from "../../components/FormQuote.astro";
import InnerHeader from "../../components/InnerHeader.astro";
import Footer from "../../components/new-ui/Footer.astro";
import SvgGreenAsterisk from "../../components/SvgGreenAsterisk.astro";
import SvgSwosh from "../../components/SvgSwosh.astro";
import SvgDoodle from "../../components/SvgDoodle.astro";
import WhatYouNeedSection from "../../components/WhatYouNeedSection.astro";
import Layout from "../../layouts/Layout.astro";
import translations from "../../i18n/en.json";
import SvgNowOrNever from "../../components/SvgNowOrNever.astro";
---

<Layout
  title="Social Media Manager La Spezia | Professional Social Management | Studio Mua"
  description="Social media manager in La Spezia for strategic management of your social channels. Engaging content, effective strategies, and community growth for your brand."
  keywords="social media manager la spezia, social media management, digital marketing, instagram marketing, social strategy, community management, content planning"
  lang="en"
>
  <main>
    <InnerHeader title={translations.socialMediaManager.pageTitle} loopText="Marketing is more than just an Instagram post">
      <!-- Desktop Version -->
      <div slot="decorations" class="desktop-only">
        <SvgDoodle x="16%" y="65%" rotateDeg={-15} zIndex={-1} />
        <SvgNowOrNever
          x="78%"
          y="5%"
          width="140px"
          rotateDeg={10}
          zIndex={-1}
        />
      </div>
      <!-- Mobile & Tablet Version -->
      <div slot="decorations" class="mobile-tablet-only">
        <SvgDoodle x="4%" y="65%" rotateDeg={-15} zIndex={-1} width="70px" />
        <SvgNowOrNever
          x="72%"
          y="5%"
          width="140px"
          rotateDeg={10}
          zIndex={-1}
          width="100px"
        />
      </div>
    </InnerHeader>
    <section class="text-section">
      <div class="text-container">
        <h2 class="text-block-title">
          {translations.socialMediaManager.sectionTitle}
        </h2>
        <p
          class="text-block"
          set:html={translations.socialMediaManager.paragraph1}
        />
        <p
          class="text-block"
          set:html={translations.socialMediaManager.paragraph2}
        />
        <p
          class="text-block"
          set:html={translations.socialMediaManager.paragraph3}
        />
        <p
          class="text-block text-block-bottom"
          set:html={translations.socialMediaManager.paragraph4}
        />
      </div>
    </section>
    <div class="waves-container">
      <svg
        class="wave"
        viewBox="0 0 1440 50"
        preserveAspectRatio="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M0,50 L0,25 Q30,0 60,25 Q90,50 120,25 Q150,0 180,25 Q210,50 240,25 Q270,0 300,25 Q330,50 360,25 Q390,0 420,25 Q450,50 480,25 Q510,0 540,25 Q570,50 600,25 Q630,0 660,25 Q690,50 720,25 Q750,0 780,25 Q810,50 840,25 Q870,0 900,25 Q930,50 960,25 Q990,0 1020,25 Q1050,50 1080,25 Q1110,0 1140,25 Q1170,50 1200,25 Q1230,0 1260,25 Q1290,50 1320,25 Q1350,0 1380,25 Q1410,50 1440,25 L1440,50 Z"
          fill="var(--blue)"></path>
      </svg>
    </div>

    <WhatYouNeedSection lang="en" page="socialMediaManager" />

    <FormQuote lang="en" />
    <Footer />
  </main>
</Layout>

<style>
  .text-section {
    width: 100%;
    position: relative;
    padding: 80px 0;
    background-color: var(--blue-light) !important;
  }
  .text-container {
    max-width: 800px;
    padding: 0 20px;
    position: relative;
    margin: auto;
  }

  .text-block-title {
    color: var(--brown);
    margin-bottom: 40px;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .text-block {
    color: var(--brown);
    line-height: 1.2;
    margin-bottom: 15px;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .waves-container {
    width: 100%;
    height: 50px;
    background-color: var(--blue-light);
  }

  .wave {
    width: 100%;
    height: 50px;
    display: block;
  }

  .desktop-only {
    display: block;
  }

  .mobile-tablet-only {
    display: none;
  }

  @media (max-width: 1024px) {
    .desktop-only {
      display: none;
    }

    .mobile-tablet-only {
      display: block;
    }
  }
</style>
