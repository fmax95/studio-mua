---
import Layout from "../layouts/Layout.astro";
import MarketingCardRow from "../components/MarketingCardRow.astro";
import HomeHeader from "../components/new-ui/HomeHeader.astro";
import WelcomeSection from "../components/new-ui/WelcomeSection.astro";
import ManifestoSection from "../components/new-ui/ManifestoSection.astro";
import CardCarousel from "../components/new-ui/CardCarousel.astro";
import Footer from "../components/new-ui/Footer.astro";
---

<Layout 
  title="Studio Mua | Graphic Design, Social Media e Content Creation La Spezia"
  description="Studio Mua è un'agenzia di comunicazione a La Spezia specializzata in graphic design, brand identity, social media management e content creation. Trasforma il tuo brand in una presenza unica e memorabile."
  keywords="graphic designer la spezia, grafico la spezia, agenzia comunicazione la spezia, social media manager, content creator, brand identity, studio design la spezia, agenzia creativa"
  lang="it"
>
  <HomeHeader />
  <WelcomeSection />
  <main>
    <div class="card-row-container">
      <MarketingCardRow />
    </div>
    <ManifestoSection />
    <CardCarousel />
  </main>
  <Footer />
</Layout>

<style>
  .cards-container {
    margin-top: 300px;
    text-align: center;
    padding-bottom: 100px;
    position: relative;
  }

  .cards-title {
    color: var(--brown);
    position: relative;
    z-index: 1;
    margin-bottom: 50px;
  }

  .card-row-container {
    margin: 130px 0;
    position: relative;
    z-index: 2;
  }

  .text-container {
    max-width: 800px;
    margin: 140px auto;
    padding: 0 20px;
    position: relative;
  }

  .text-block-title {
    color: var(--white);
    margin-bottom: 20px;
    text-align: center;
    position: relative;
    z-index: 1;
    background-color: rgba(171, 191, 226, 0.1);
    padding: 12px 20px;
    border-radius: 12px;
    backdrop-filter: blur(8px);
  }

  .text-block {
    color: var(--white);
    line-height: 1.6;
    margin-bottom: 15px;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .bubble-container {
    margin-top: 100px;
    max-width: 720px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 16px;
  }

  .girl-mobile {
    display: none;
  }

  /* Mobile: aggiungi background semi-trasparente per leggibilità */
  @media (max-width: 720px) {
    .text-block-title {
      background-color: rgba(171, 191, 226, 0.75);
      padding: 12px 20px;
      border-radius: 12px;
      backdrop-filter: blur(8px);
    }

    .girl-desktop {
      display: none;
    }

    .girl-mobile {
      display: block;
    }

    /* .text-block-bottom {
      background-color: rgba(171, 191, 226, 0.2);
      padding: 10px 16px;
      border-radius: 8px;
      backdrop-filter: blur(6px);
    } */

    .cards-title {
      background-color: rgba(171, 191, 226, 0.75);
      padding: 12px 20px;
      border-radius: 12px;
      backdrop-filter: blur(8px);
      display: inline-block;
    }
  }
</style>
