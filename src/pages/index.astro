---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Bubble from "../components/Bubble.astro";
import SvgSmartphone from "../components/SvgSmartphone.astro";
import MarketingCardRow from "../components/MarketingCardRow.astro";
import SvgSwosh from "../components/SvgSwosh.astro";
import SvgAsh from "../components/SvgAsh.astro";
import SvgGirl from "../components/SvgGirl.astro";
---

<Layout title="Studio Mua | Homepage">
  <Header />
  <main>
    <div class="bubble-container">
      <Bubble>
        Your feed is full of brands trying to sell you something &amp; your
        inbox is packed with emails you keep meaning to unsubscribe from...
      </Bubble>
    </div>
    <div class="text-container">
      <SvgSmartphone x="0%" y="-35%" rotateDeg={16} zIndex={0} />
      <SvgSwosh x="55%" y="2%" rotateDeg={-5} zIndex={0} />
      <SvgSwosh x="5%" y="13%" rotateDeg={-25} zIndex={0} />
      <SvgAsh x="80%" y="60%" rotateDeg={-10} zIndex={0} />
      <SvgSwosh x="10%" y="17%" rotateDeg={+25} zIndex={0} />
      <SvgSwosh x="70%" y="71%" rotateDeg={-25} zIndex={0} />
      <SvgSwosh x="39%" y="50%" rotateDeg={-12} zIndex={0} />
      <SvgAsh x="1%" y="60%" rotateDeg={-10} zIndex={0} />

      <h1 class="text-block-title">Welcome to Studio Mua</h1>
      <p class="text-block">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Lorem ipsum
        dolor sit amet, consectetur adipiscing elit. Lorem ipsum dolor sit amet,
        consectetur adipiscing elit. Lorem ipsum dolor sit amet, consectetur
        adipiscing elit.
      </p>
      <p class="text-block">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Lorem ipsum
        dolor sit amet, consectetur adipiscing elit. Lorem ipsum dolor sit amet,
        consectetur adipiscing elit.
      </p>
      <p class="text-block">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Lorem ipsum
        dolor sit amet, consectetur adipiscing elit. Lorem ipsum dolor sit amet,
        consectetur adipiscing elit. Lorem ipsum dolor sit amet, consectetur
        adipiscing elit.
      </p>
      <p class="text-block text-block-bottom">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Lorem ipsum
        dolor sit amet, consectetur adipiscing elit. Lorem ipsum dolor sit amet,
        consectetur adipiscing elit.
      </p>
    </div>
    <div class="cards-container">
      <div class="girl-mobile">
        <SvgGirl x="5%" y="-15%" rotateDeg={0} zIndex={0} />
      </div>
      <div class="girl-desktop">
        <SvgGirl x="5%" y="-25%" rotateDeg={0} zIndex={0} />
      </div>
      <h2 class="cards-title">
        Go from post & ghost to <br />content that just (gets) clicks
      </h2>
      <div class="card-row-container">
        <MarketingCardRow />
      </div>
    </div>
  </main>
</Layout>

<style>
  .cards-container {
    margin-top: 100px;
    text-align: center;
    padding-bottom: 100px;
    position: relative;
  }

  .cards-title {
    color: var(--brown);
    position: relative;
    z-index: 1;
    margin-bottom: 50px;
  }

  .card-row-container {
    position: relative;
    z-index: 2;
  }

  .text-container {
    max-width: 800px;
    margin: 140px auto;
    padding: 0 20px;
    position: relative;
  }

  .text-block-title {
    color: var(--white);
    margin-bottom: 20px;
    text-align: center;
    position: relative;
    z-index: 1;
    background-color: rgba(171, 191, 226, 0.1);
    padding: 12px 20px;
    border-radius: 12px;
    backdrop-filter: blur(8px);
  }

  .text-block {
    color: var(--white);
    line-height: 1.6;
    margin-bottom: 15px;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .bubble-container {
    margin-top: 100px;
    max-width: 720px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 16px;
  }

  .girl-mobile {
    display: none;
  }

  /* Mobile: aggiungi background semi-trasparente per leggibilit√† */
  @media (max-width: 720px) {
    .text-block-title {
      background-color: rgba(171, 191, 226, 0.75);
      padding: 12px 20px;
      border-radius: 12px;
      backdrop-filter: blur(8px);
    }

    .girl-desktop {
      display: none;
    }

    .girl-mobile {
      display: block;
    }

    /* .text-block-bottom {
      background-color: rgba(171, 191, 226, 0.2);
      padding: 10px 16px;
      border-radius: 8px;
      backdrop-filter: blur(6px);
    } */

    .cards-title {
      background-color: rgba(171, 191, 226, 0.75);
      padding: 12px 20px;
      border-radius: 12px;
      backdrop-filter: blur(8px);
      display: inline-block;
    }
  }
</style>
